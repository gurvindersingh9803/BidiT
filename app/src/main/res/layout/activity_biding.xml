<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".MainActivity">

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="100dp"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/file"
        android:layout_height="30dp"></Spinner>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Your maximum bid ($CAD) -"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buyer's premium 10% ($CAD)-"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"

        android:layout_marginTop="80dp"/>

    <TextView
        android:layout_width="300dp"
        android:id="@+id/buyers_premium"
        android:layout_height="wrap_content"
        android:text="10000"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginTop="80dp"

        android:layout_marginLeft="290dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toatl cost ($CAD)-"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"

        android:layout_marginTop="130dp"/>

    <TextView
        android:layout_width="300dp"
        android:id="@+id/total_cost"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginTop="130dp"

        android:layout_marginLeft="290dp"
        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_marginTop="255dp"
        android:textColor="#000000"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:text="By pressing confirm you are commiting to biding.If you win you are agreeing to the terms of service."/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:background="@drawable/button_design"
        android:gravity="center"
        android:onClick="saveBid"
        android:text="Confirm"
        android:textColor="#FFFFFF" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="2000dp"
        android:layout_height="200dp"
        android:foregroundGravity="center|bottom"
        android:layout_marginBottom="20dp"
        android:visibility="gone"
         />
</RelativeLayout>